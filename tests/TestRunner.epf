// Обработка для запуска тестов с GUI
&НаКлиенте
Процедура ЗапуститьТесты(Команда)
    Результаты = ЗапуститьТестыНаСервере();
    
    // Отображение в таблице
    ТаблицаРезультатов.Очистить();
    Для Каждого Строка Из Результаты Цикл
        НоваяСтрока = ТаблицаРезультатов.Добавить();
        НоваяСтрока.Тест = Строка.Тест;
        НоваяСтрока.Статус = Строка.Статус;
        НоваяСтрока.Время = Формат(Строка.Время, "ЧДЦ=3");
        НоваяСтрока.Сообщение = Строка.Сообщение;
        
        // Подсветка
        Если Строка.Статус = "Успех" Тогда
            НоваяСтрока.ЦветФона = Новый Цвет(200, 255, 200);
        Иначе
            НоваяСтрока.ЦветФона = Новый Цвет(255, 200, 200);
        КонецЕсли;
    КонецЦикла;
КонецПроцедуры
